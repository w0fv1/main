    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body, html {
            height: 100%;
            font-family: 'Inter', 'system-ui', sans-serif;
            background: linear-gradient(135deg, #f0f2f5, #dbeafe);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .card {
            background: white;
            border-radius: 1.25rem;
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
            padding: 80px 60px;
            max-width: 480px;
            width: 100%;
            text-align: center;
            animation: fadeIn 0.6s ease;
        }

        .emoji {
            font-size: 84px;
            margin-bottom: 48px;
            animation: pulse 2s infinite ease-in-out;
        }

        .message {
            font-size: 22px;
            color: #333;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .error-code {
            display: inline-block;
            font-size: 13px;
            background-color: #e0f2fe;
            color: #0369a1;
            padding: 6px 12px;
            border-radius: 9999px;
            cursor: pointer;
            user-select: none;
            transition: background-color 0.2s ease, color 0.2s ease;
            margin-bottom: 36px;
        }

        .error-code:hover {
            background-color: #bae6fd;
            color: #0284c7;
        }

        .copied {
            background-color: #dcfce7 !important;
            color: #15803d !important;
        }


        .buttons {
            display: flex;
            justify-content: center;
            gap: 16px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 20px;
            border: none;
            border-radius: 10px;
            background-color: #3b82f6;
            color: white;
            font-size: 15px;
            cursor: pointer;
            transition: background 0.2s ease;
        }

        .btn:hover {
            background-color: #2563eb;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.1);
            }
        }
    </style>
